{
  "version": 2,
  "name": "xavier-os",
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/dropship", "dest": "/dropship.html" },
    { "src": "/models", "dest": "/models.html" },
    { "src": "/creative", "dest": "/creative.html" },
    { "src": "/social", "dest": "/social.html" },
    { "src": "/admin", "dest": "/admin.html" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
